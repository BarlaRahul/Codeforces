#include<bits/stdc++.h>
using namespace std;
 int main()
 {
 	string s;
 	cin>>s;
 int len=s.length();
 int one=0,two=0,three=0;
 for(int i=0;i<len;i=i+2)
 {
 	if(s[i]=='1')
 	{
 		one++;
	 }
	 else if(s[i]=='2')
	 {
	 	two++;
	 }
	 else if(s[i]=='3')
	 {
	 	three++;
	 }
	 
 }
 for(int i=0;i<len;i=i+2)
 {
 	
 	
 	 if(one!=0)
 	{
 		cout<<"1";
 		one--;
	 }
	 else if(two!=0)
	 {
	 	cout<<"2";
	 	two--;
	 }
	 else if(three!=0)
	 {
	 	cout<<"3";
	three--;
	 }
	if(i!=len-1)
 	{
 		cout<<"+";
	 }
	 
 }
 }
